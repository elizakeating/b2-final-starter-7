<%= form_with url: "/merchants/#{@bulk_discount.merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, data: { turbo: false } do |f| %>
  <%= f.label :percentage, "Percentage discount:" %>
  <%= f.number_field :percentage, value: "#{@bulk_discount.percentage}" %><br>

  <%= f.label :quantity_threshold, "Quantity threshold:" %>
  <%= f.number_field :quantity_threshold, value: "#{@bulk_discount.quantity_threshold}" %><br>

  <%= f.submit "Submit" %>
<% end %>
